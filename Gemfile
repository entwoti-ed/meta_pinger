  gem "terminal-notifier-guard"
  gem "rspec-rails"
  gem "guard-rspec"
  gem "capybara"
  gem "launchy"
  gem "pry-rails"
  gem "quiet_assets"
  gem "binding_of_caller"
  gem "meta_request"
  gem "awesome_print"
end

gem "better_errors", :group => [:development]
gem "simplecov", :require => false, :group => :test
